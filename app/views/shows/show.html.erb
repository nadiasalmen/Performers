<div class="container-fluid p-0" style="height: 100vh; background-image: linear-gradient(to top, black, rgba(255,0,0,0)), url('<%= cl_image_path @show.images.first.key %>'); background-size: cover; background-position: center;">
  <div class="container m-auto h-100 d-flex flex-column justify-content-end">
    <div class="container m-0 d-flex">
      <div class="d-flex flex-column">
        <h1 class="show-large-card-title my-3"><%= @show.name %></h1>
        <div class="w-100">
          <div class="stars-rating my-3">
            <i class="fas fa-star show-large-star"></i>
            <i class="fas fa-star show-large-star"></i>
            <i class="fas fa-star show-large-star"></i>
            <i class="fas fa-star-half-alt show-large-star"></i>
            <i class="far fa-star show-large-star"></i>
          </div>
          <div class="d-flex align-self-start my-3">
            <% @show.show_tags.each do |show_tag| %>
              <p class="button btn-transparent-grey px-4 py-1 border-0 rounded-pill font-weight-light mr-1 mt-1 show-large-pill-button"><%= show_tag.tag.name %></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="d-flex align-items-center justify-content-end flex-grow-1">
        <%= link_to "/coming_soon" do %>
          <i style="font-size:1rem" class="fa button btn-orange p-2 rounded-circle">&#xf1e0;</i>
        <% end %>
        <%= link_to "Contrat치", "/coming_soon", class: "button btn-orange px-4 py-1 border-0 rounded-lg rounded-pill ml-2 font-weight-light" %>
      </div>
    </div>
    <div class="container">
      <div class="carousel-dimension swiper-container">
        <div class="swiper-wrapper">
          <% @show.images do |image| %>
            <div class="swiper-slide">
                <div class="default-card-category" style="background-image: url('https://i.imgur.com/pwZIhkD.png')">
                    <div class="default-card-info w-100">
                        <h2 class="default-card-title ml-3">Xpiral</h2>
                        <div class="default-card-pills-and-rating w-100">
                            <div class="default-pills d-flex align-self-start ml-3">
                                <p class="default-pill-button">Tango Fusi칩n</p>
                                <p class="default-pill-button">Tango Fusi칩n</p>
                            </div>
                            <div class="default-stars-rating mr-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          <%  %>
        </div>
        <div class="arrow-container pl-5 pr-5">
          <i class="fas fa-angle-left fa-2x left-arrow"></i>
          <i class="fas fa-angle-right fa-2x right-arrow"></i>
        </div>
      </div>
    </div>
    <div class="d-flex py-3 justify-content-center align-items-center">
      <%= link_to "Ver m치s", "/coming_soon", class: "button btn-transparent-grey px-4 py-1 border-0 rounded-lg rounded-pill ml-2 fs-20 font-weight-light" %>
    </div>
  </div>
</div>
