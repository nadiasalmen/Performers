<div class="container-fluid p-0" style="height: 100vh; background-image: linear-gradient(to top, black, rgba(255,0,0,0)), url('<%= cl_image_path @show.images.first.key %>'); background-size: cover; background-position: center;">
  <div class="container m-auto h-100 d-flex flex-column justify-content-end">
    <div class="container m-0 d-flex">
      <div class="d-flex flex-column">
        <h1 class="large-card-title my-3"><%= @show.name %></h1>
        <div class="w-100">
          <div class="stars-rating my-3">
            <i class="fas fa-star large-star"></i>
            <i class="fas fa-star large-star"></i>
            <i class="fas fa-star large-star"></i>
            <i class="fas fa-star-half-alt large-star"></i>
            <i class="far fa-star large-star"></i>
          </div>
          <div class="pills d-flex align-self-start my-3">
            <% @show.show_tags.each do |show_tag| %>
              <p class="button btn-transparent-grey px-4 py-1 border-0 rounded-pill font-weight-light mr-1 mt-1 large-pill-button"><%= show_tag.tag.name %></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="d-flex align-items-center justify-content-end flex-grow-1">
        <%= link_to "/coming_soon" do %>
          <i style="font-size:1rem" class="fa button btn-orange p-2 rounded-circle">&#xf1e0;</i>
        <% end %>
        <%= link_to "Contratá", "/coming_soon", class: "button btn-orange px-4 py-1 border-0 rounded-lg rounded-pill ml-2 font-weight-light" %>
      </div>
    </div>
    <div class="container h-15" id="swiper-container-buttons-wrapper">
      <div class="swiper-container mySwiper">
        <div class="swiper-wrapper">
          <% @show.images.each do |image| %>
            <div class="swiper-slide"><%= cl_image_tag image.key %></div>
          <% end %>
        </div>
        <%# <div class="swiper-pagination"></div> %>
      </div>
      <div class="swiper-button-next" id="button-next"></div>
      <div class="swiper-button-prev" id="button-prev"></div>
    </div>
    <div class="d-flex py-3 justify-content-center align-items-center">
      <%= link_to "Ver más", "/coming_soon", class: "button btn-transparent-grey px-4 py-1 border-0 rounded-lg rounded-pill ml-2 fs-20 font-weight-light" %>
    </div>
  </div>
</div>
